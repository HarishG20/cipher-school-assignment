#include <iostream>
#include <vector>
#include <algorithm>
using namespace std;
int minimumTankSize(int n, int x, vector<int>& stations) {
    vector<int> gaps;
    gaps.push_back(stations[0]); 
    for (int i = 1; i < n; ++i) {
        gaps.push_back(stations[i] - stations[i - 1]);  
    }
    gaps.push_back(x - stations[n - 1]);  
    return *max_element(gaps.begin(), gaps.end()); 
}
int main() {
    int t;
    cin >> t;
    while (t--) {
        int n, x;
        cin >> n >> x;
        vector<int> stations(n);
        for (int i = 0; i < n; ++i) {
            cin >> stations[i];
        }
        cout << minimumTankSize(n, x, stations) << endl;
    }
}
