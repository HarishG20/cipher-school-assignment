//Question-1
#include<iostream>
using namespace std;
int main(){
    int num=42;
    int *ptr=&num;
    cout<<"Value of num using the variable:"<<num<<endl;
    cout<<"Value of num using the pointer:"<<*ptr<<endl;
}
//question-2
#include<iostream>
using namespace std;
int main(){
    int arr[]={1,2,3,4,5};
    int *ptr=arr;
    for(int i=0;i<5;++i){
        cout<<"Element "<<i+1<<": "<<*(ptr+i)<<endl; 
    }
}
//question-3
#include<iostream>
using namespace std;
int main(){
    int num=4;       
    int *ptr=&num;    
    int **pptr=&ptr;
    cout<<"variable: "<<num<<endl;
    cout<<"pointer: "<<*ptr<<endl;
    cout<<"pointer to pointer: "<<**pptr<<endl;
}
